{
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/css/style.css --minify",
    "copy:html": "cpx \"./src/index.html\" ./dist",
    "copy:assets": "cpx \"./src/{images,vendor,js}/**/*.*\" ./dist/assets",
    "copy:js-lib": "cpx \"./node_modules/tw-elements/js/tw-elements.umd.min.js\" ./dist/js",
    "build": "npm run build:css && npm run copy:html && npm run copy:assets && npm run copy:js-lib"
},
  "devDependencies": {
    "cpx": "^1.5.0",
    "tailwindcss": "^3.4.7"
  },
  "dependencies": {
    "tw-elements": "^2.0.0"
  }
}
